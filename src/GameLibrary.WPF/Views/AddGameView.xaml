<UserControl x:Class="GameLibrary.WPF.Views.AddGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Style="{StaticResource label}"
		           Text="Title:" />
        <TextBox x:Name="Title" Height="30">
            <TextBox.CaretBrush>
                <SolidColorBrush Color="Gray" />
            </TextBox.CaretBrush>
        </TextBox>


        <TextBlock Style="{StaticResource label}"
		           Text="Notes:" />
        <TextBox x:Name="Notes"
		         Height="120">
            <TextBox.CaretBrush>
                <SolidColorBrush Color="Gray" />
            </TextBox.CaretBrush>
        </TextBox>

        <Button x:Name="AddGame"
		        Content="Add"
		        HorizontalAlignment="Right"
		        Margin="0 12 0 0" />
    </StackPanel>
</UserControl>
