<UserControl x:Class="GameLibrary.WPF.Views.NoResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Margin="8 20 8 8"
	        HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock Text="No results were found for that search text." />
            <StackPanel Orientation="Horizontal"
			            HorizontalAlignment="Center">
                <TextBlock Text=" Would you like to " />
                <Button x:Name="AddGame">
                    <TextBlock Text="Create a New Game"
					           TextDecorations="Underline" />
                </Button>
                <TextBlock Text="?" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
