<UserControl x:Class="MicroManagement.Desktop.Views.AddNewEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Add new employee" FontSize="20" />
        <Grid Margin="0 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0" FontSize="16" />
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="Name" />

            <StackPanel Grid.Row="1" Grid.Column="1"  Orientation="Horizontal">
                <Button x:Name="AddEmployee" Content="Add" Width="150" />
                <Button x:Name="Back" Content="Back" Margin="10 0" />
            </StackPanel>
        </Grid>
    </StackPanel>
    
</UserControl>
